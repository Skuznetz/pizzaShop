<h2>Ваша корзина</h2>

<table class="table table-striped">
 <thead>
  <tr>
   <th>#</th>
    <th> Название</th>
     <th>Цена</th> 
     <th>Количество</th> 
   </tr>
    </thead>
     <tbody>
     <% total_price = 0 %>
     <% total_qty = 0 %>
<% @items.each do |item| %>


    <tr> <th>1</th>
     <td><%=item[0].title %></td> 
      <td><%=item[0].price %></td>
       <td><%=item[1] %></td> 
   </tr>
     <% total_price += item[0].price *  item[1].to_i %>
     <% total_qty += item[1].to_i %>
   <% end %>

    <tr> <th>Всего</th>
     <td></td> 
      <td>Total: <%=total_price %>Rub</td>
       <td><%=total_qty %></td> 
   </tr>

    </tbody> 
    </table>

    <form action="/place_order" method="POST" role="form">
    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>"/>
<div class="form-group">
    <label>Ваше Имя</label>
    <input name="order[name]" type="text" class="form-control" placeholder="Ваше Имя">
  </div>

  <div class="form-group">
    <label>Ваш Телефон</label>
    <input name="order[phone]" type="text" class="form-control" placeholder="Ваш Телефон">
  </div>

   <div class="form-group">
    <label>Ваш Адрес</label>
    <textarea name="order[adress]" class="form-control" placeholder="Ваш Адрес"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Заказать</button>

   <button  class="btn btn-danger" onclick=" return cancel_order();">Cansel</button>

    </form>